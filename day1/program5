scoreplayer1=int(input('Enter the score of first player in 60 balls\n'))
scoreplayer2=int(input('Enter the score of second player in 60 balls\n'))
scoreplayer3=int(input('Enter the score of third player in 60 balls\n'))
strikerate1=scoreplayer1*100/60
strikerate2=scoreplayer2*100/60
strikerate3=scoreplayer3*100/60
print("Strike rate of player 1 is\n",strikerate1)
print("Strike rate of player 2 is\n",strikerate2)
print("Strike rate of player 3 is\n",strikerate3)
print("Runs scored by player 1 if they played 60 more deliveries:\n",scoreplayer1*2)
print("Runs scored by player 2 if they played 60 more deliveries:\n",scoreplayer2*2)
print("Runs scored by player 3 if they played 60 more deliveries:\n",scoreplayer3*2)
print("Maxinum number of sixes player1 can hit:\n",scoreplayer1//6)
print("Maxinum number of sixes player2 can hit:\n",scoreplayer2//6)
print("Maxinum number of sixes player3 can hit:\n",scoreplayer3//6)
